{{!-- main page title --}}
<div class="container">
  <div class="row">
    <div class="col-12">
      <center>
        <img src="./assets/images/cute-buns.png" width="25%">
        <h1>Welcome!</h1>
        <h1>Thanks for checking out my <b><u>Cute Buns!</u></b></h1>
        <h3><i> * A classy burger joint * </i></h3>
        <hr>
        {{!-- burger form to add burger to the list --}}
        <h2>What do you like between <i>YOUR</i> buns? Add a favorite burger here! </h2>
        <form class="create-form">
          <div class="form-group">
            <label for="burg">Burger Name:</label>
            <input type="text" id="burg" name="burger_name">
          </div>
          <div class="form-group">
            {{!-- <label for="devoured"></label><br> --}}
            <input type="radio" name="devoured" value="1" checked> I already devoured this! <br>
            <input type="radio" name="devoured" value="0"> Put it on the plate!
          </div>
          <button type="submit">Add Burger</button>
        </form>
      </center>
    </div>
  </div>
</div>
<hr>
{{!-- left column --}}
<div class="container">
  <div class="row">

    {{!-- left column --}}
    <div class="col-sm-12 col-md-6" id="left plate">
      <center>
        <h3>On the Plate!</h3>
      </center>
      <ul id="burger-input">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    {{!-- right column --}}
    <div class="col-sm-12 col-md-6" id="right-plate">
      <center>
        <h3>Burgers Devoured!!</h3>
      </center>
      <ul id="burger-input">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>


